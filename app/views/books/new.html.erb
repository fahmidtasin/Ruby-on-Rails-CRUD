<h1 class="text-center">Add Books</h1>

<section class="py-5">
  <div class="container">
    <div class="row">
      <div class="col-md-6 mx-auto">
	  
        <%= form_with model: @book, url: { :action => 'create' }, html: { class: 'form' } do |form| %>
          <div class="form-group">
            <%= form.label "Title:" %>
            <%= form.text_field :title, {class: 'form-control'} %>
          </div>
          
          <div class="form-group">
            <%= form.label "Price:" %>
            <%= form.text_field :price, {class: 'form-control'} %>
          </div>
          
          <div class="form-group">
            <%= form.label "Subject:" %>
            <%= form.collection_select :subject_id, @subjects, :id, :name, { prompt: true }, {class: 'form-control'} %>
          </div>
          
          <div class="form-group">
            <%= form.label "Description:" %>
            <%= form.text_area :description, {class: 'form-control'} %>
          </div>
		  
          <div class="text-center mt-2">    
            <%= form.submit "Create", {class: 'btn btn-primary'} %>
		  </div>
        <% end %>
        
        <%= link_to "Back", books_path, {class: 'btn btn-secondary'} %>
 
	  </div>
    </div>
  </div>
</section>
